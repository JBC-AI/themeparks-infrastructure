{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageAccountType": {
      "type": "string"
    },
    "environmentName": {
      "type": "string",
      "defaultValue": "dev",
      "allowedValues": [
        "dev",
        "prod"
      ]
    }
  },
  "variables": {
    "storageAccountName": "[toLower(concat(parameters('environmentName'), 'storage', uniqueString(resourceGroup().id)))]",
    "appInsightsName": "[toLower(concat(parameters('locationSuffix'), '-', parameters('environmentName'), '-insights-', uniqueString(resourceGroup().id)))]"
  },
  "resources": [
    {
      "apiVersion": "2017-10-01",
      "name": "[variables('storageAccountName')]",
      "location": "[resourceGroup().location]",
      "type": "Microsoft.Storage/storageAccounts",
      "sku": {
        "name": "[parameters('storageAccountType')]"
      },
      "tags": {
        "environment": "[parameters('environmentName')]"
      },
      "kind": "StorageV2",
      "properties": {
        "supportsHttpsTrafficOnly": "true",
        "accessTier": "Hot",
        "encryption": {
          "services": {
            "blob": {
              "enabled": true
            },
            "file": {
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        }
      },
      "dependsOn": []
    },
    {
      "name": "[variables('appInsightsName')]",
      "type": "microsoft.insights/components",
      "kind": "web",
      "apiVersion": "2014-04-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "[concat('hidden-link:', resourceId('Microsoft.BotService/botServices/', parameters('botId')))]": "Resource"
      },
      "properties": {
        "ApplicationId": "[parameters('botId')]"
      }
    }
  ]
}